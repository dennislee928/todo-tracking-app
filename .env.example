# =============================================================================
# Todo Tracking App - Environment Variables
# Copy to .env and fill in values. Do not commit secrets.
# =============================================================================

# -----------------------------------------------------------------------------
# Backend (web-be)
# -----------------------------------------------------------------------------
DATABASE_URL=postgres://user:password@localhost:5432/todo?sslmode=disable
JWT_SECRET=your-secret-key-change-in-production

# Supabase (optional - for Supabase Auth JWT validation)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_JWT_SECRET=

# Stripe (Web payment)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# Apple IAP (iOS)
APPLE_SHARED_SECRET=

# Google Play (Android)
GOOGLE_PACKAGE_NAME=
GOOGLE_SERVICE_ACCOUNT_JSON=

# -----------------------------------------------------------------------------
# Frontend (web-ui)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# AdSense (optional - for ad display)
NEXT_PUBLIC_ADSENSE_ID=
NEXT_PUBLIC_ADSENSE_SLOT=1234567890

# -----------------------------------------------------------------------------
# Flutter (device_shared)
# API_URL is passed via: flutter run --dart-define=API_URL=https://...
# - Android emulator: http://10.0.2.2:8080/api/v1
# - iOS simulator: http://localhost:8080/api/v1
# - Real device: http://YOUR_IP:8080/api/v1
# -----------------------------------------------------------------------------
